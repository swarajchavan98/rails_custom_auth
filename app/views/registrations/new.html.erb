<div>
  <h1 class="block font-bold text-xl pb-4">Sign up</h1>

  <%= form_with model: @user, url: registration_path do |f| %>
    <%= tag.div(@user.errors.full_messages.to_sentence) if @user.errors.any? %>

    <div class="flex flex-col">
      <%= f.label :email %>
      <%= f.email_field :email, class: "border" %>
    </div>

    <div class="flex flex-col">
      <%= f.label :password %>
      <%= f.password_field :password, class: "border" %>
    </div>

    <%= f.submit "Sign up" %>
  <% end %>
</div>