<div>
  <h1 class="block font-bold text-xl pb-4">Sign in</h1>

  <%= form_with scope: :session, url: session_path do |f| %>
    <div class="flex flex-col">
      <%= f.label :email %>
      <%= f.email_field :email, class: "border" %>
    </div>

    <div class="flex flex-col">
      <%= f.label :password %>
      <%= f.password_field :password, class: "border" %>
    </div>

    <%= f.submit "Sign in" %>
  <% end %>

  <%= link_to "Forgot password?", new_password_reset_path %>
</div>